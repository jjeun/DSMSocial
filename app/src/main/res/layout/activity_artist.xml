<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.application.dsmsocial.ArtistActivity"
    android:background="@color/mainBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistImage"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/artistImage"
        android:textStyle="bold"
        android:textColor="@color/mainFont"/>

    <TextView
        android:id="@+id/artistType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/artistName"
        android:layout_marginTop="-15dp"
        android:textColor="@color/mainFont"/>

    <TextView
        android:id="@+id/artistBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/artistBio"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/artistType"
        android:layout_marginTop="35dp"
        android:paddingLeft="75dp"
        android:paddingRight="75dp"
        android:textColor="@color/mainFont"
        android:layout_marginBottom="35dp" />

    <TextView
        android:id="@+id/artistBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="@string/artistBar"
        android:background="@color/barBackground"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/artistBio"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textIsSelectable="false"
        android:gravity="center" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistBioGridView"
        android:layout_gravity="center"
        android:numColumns="3"
        android:gravity="center"
        android:padding="30dp"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="20dp"
        android:layout_below="@+id/artistBar">
    </GridView>

</RelativeLayout>
