<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.application.dsmsocial.AddCart"
    android:background="@color/sliderBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addView"
        android:src="@drawable/check"
        android:background="@color/sliderBackground"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/thankyouText"
        android:layout_marginBottom="25dp" />


    <TextView
        android:text="@string/thankyouText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thankyouText"
        android:textSize="20sp"
        android:textColor="@color/barBackground"
        android:padding="5dp"
        android:layout_marginBottom="40dp"
        android:background="@color/sliderBackground"
        android:layout_centerInParent="true" />

    <TextView
        android:text="@string/orderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderText"
        android:textSize="20sp"
        android:textColor="@color/barBackground"
        android:padding="5dp"
        android:layout_marginBottom="40dp"
        android:background="@color/sliderBackground"
        android:layout_centerInParent="true"
        android:layout_below="@+id/thankyouText"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:id="@+id/menuButton"
        android:layout_below="@+id/orderText"
        android:layout_centerHorizontal="true"
        android:src="@drawable/menu"
        android:background="@color/sliderBackground"/>

</RelativeLayout>
