<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    tools:context="com.application.dsmsocial.Login"
    android:id="@+id/login">

    <EditText
        android:background="@null"
        android:id="@+id/emailField"
        android:inputType="textWebEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="EMAIL"
        android:textColorHint="#f7f7f7"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#f7f7f7"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:ellipsize="start"
        android:layout_marginTop="315dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:background="@null"
        android:id="@+id/passwordField"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:textColorHint="#f7f7f7"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#f7f7f7"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:ellipsize="start"
        android:selectAllOnFocus="true"
        android:phoneNumber="false"
        android:password="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/guestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/guest"
        android:contentDescription="guest button"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/enterButton"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/enterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/enter"
        android:contentDescription="enter button"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/passwordField"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
