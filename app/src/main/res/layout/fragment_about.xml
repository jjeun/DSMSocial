<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:id="@+id/aboutViewFlipper"
        android:layout_gravity="center_horizontal"
        android:padding="15dp">
    </ViewFlipper>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/aboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="40sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/aboutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textSize="25sp"
                android:layout_below="@id/aboutTitle"
                android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/mapLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/aboutText"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
            <ImageView
                android:id="@+id/aboutMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/about_map"
                android:adjustViewBounds="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/aboutContactTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/aboutContact1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:textSize="15sp"
                    android:layout_below="@id/aboutContactTitle"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/aboutContact2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:textSize="15sp"
                    android:layout_below="@id/aboutContact1"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/aboutContact3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:textSize="15sp"
                    android:layout_below="@id/aboutContact2"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/aboutContact4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:textSize="15sp"
                    android:layout_below="@id/aboutContact3"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/aboutContact5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:textSize="15sp"
                    android:layout_below="@id/aboutContact4"
                    android:textColor="@color/white"/>


            </RelativeLayout>

        </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvTitle"
        android:text="@string/hello_blank_fragment4"
        android:layout_width="wrap_content"
        android:layout_height="116dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"/>
</LinearLayout>